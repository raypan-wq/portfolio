---
import MediumArticle from "@/components/MediumArticle.astro";
import { getSortedBlogEntries } from "@/content/util";
import Layout from "@/layouts/Layout.astro";

const blogEntries = await getSortedBlogEntries();
---

<Layout title="Ray Pan - Blogs">
  <section>
    <h3 class="scroll-m-20 text-2xl font-semibold tracking-tight">Blogs</h3>
    <div class="mt-6 flex flex-col gap-3">
      {blogEntries.map((entry) => <MediumArticle entry={entry} isTop={true} />)}
    </div>
  </section>
</Layout>
